@model Hyrabil.Models.SkapaHyrbilar

<h1>Skapa Hyrbil</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label class="control-label">Namn</label>
                <input class="form-control" asp-for="Namn" />
                <span asp-validation-for="Namn" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Växellåda</label>
                @Html.DropDownListFor(model => model.Växellåda,
               Enum.GetNames(typeof(Hyrabil.Models.SkapaHyrbilar.VaxelLadaEnum))
               .Select(e => new SelectListItem { Text = e }), new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label class="control-label">Sittplatser</label>
                @Html.DropDownListFor(model => model.Sittplats,
               Enum.GetNames(typeof(Hyrabil.Models.SkapaHyrbilar.SittPlatserEnum))
               .Select(e => new SelectListItem { Text = e }), new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label class="control-label">Sittplatser</label>
                <input class="form-control" asp-for="Sittplatser" />
                <span asp-validation-for="Sittplatser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Skapa" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Återgå</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}